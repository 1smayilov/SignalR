@model List<ResultOpeningHourDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Açılma Vaxtı Əməliyyatları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Açılma Vaxtı Hissəsinin Listi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Açılma Vaxtı ilə bağlı əməliyyatları aşağıdan görə bilərsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Həftənin Hansı Günləri</th>
									<th scope="col">Saat İntervalı</th>
									<th scope="col">Yenilə</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.WeekDay</td>
										<td>@item.Hour</td>
										<td><a href="/OpeningHour/UpdateOpeningHour/@item.OpeningHoursId" class="btn btn-outline-success">Yenilə</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>


