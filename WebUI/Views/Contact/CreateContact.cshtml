@model CreateContactDto

@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Əlaqə əməliyyatları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Əlaqə Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="image">Yer</label>
                                <input type="text" class="form-control" asp-for="Location" id="image">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Email</label>
                                <input type="text" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="FooterDesription">Sonluq Məlumatı</label>
                                <input type="text" class="form-control" asp-for="FooterDesription" id="FooterDesription">
                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Təsdiq Et</button>
                            <a href="@Url.Action("Index", "Contact")" class="btn btn-secondary">İmtina Et</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


