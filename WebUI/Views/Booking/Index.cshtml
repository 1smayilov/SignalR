@model List<ResultBookingDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasiya Əməliyyatları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Rezervasiya Hissəsinin Listi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Rezervasiya ilə bağlı əməliyyatları aşağıdan görə bilərsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad</th>
									<th scope="col">Telefon</th>
									<th scope="col">Email</th>
									<th scope="col">Şəxslərin Sayı</th>
									<th scope="col">Tarix</th>
									<th scope="col">Yenilə</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Name</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.PersonCount</td>
										<td>@item.Date.ToShortDateString()</td>
										<td><a href="/Booking/UpdateBooking/@item.BookingId" class="btn btn-outline-success">Yenilə</a></td>
										<td><a href="/Booking/DeleteBooking/@item.BookingId" class="btn btn-outline-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Booking/CreateBooking/" class="btn btn-outline-primary">Yeni Rezervasiya Əlavə Et</a>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>



