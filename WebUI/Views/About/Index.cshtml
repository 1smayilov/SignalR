@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Haqqında Əməliyyatları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Haqqında Hissəsinin Listi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Haqqında ilə bağlı əməliyyatları aşağıdan görə bilərsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Haqqında Hissəsinin Şəkli</th>
									<th scope="col">Adı</th>
									<th scope="col">Məlumat</th>
									<th scope="col">Yenilə</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutId</td>
										<td>@item.ImageUrl</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Yenilə</a></td>
										<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Haqqında Hissəsi Əlavə Et</a>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>


