@model List<ResultContactDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Əlaqə Əməliyyatları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Əlaqə Hissəsinin Listi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Əlaqə ilə bağlı əməliyyatları aşağıdan görə bilərsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Yer</th>
									<th scope="col">Telefon</th>
									<th scope="col">Email</th>
									<th scope="col">Sonluq Məlumatı</th>
									<th scope="col">Yenilə</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.FooterDesription</td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success">Yenilə</a></td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-outline-primary">Yeni Əlaqə Hissəsi Əlavə Et</a>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>


