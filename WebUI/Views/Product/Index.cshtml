@model List<ResultProductWithCategoryDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Məhsul Əməliyyatları</h4>
		@if (TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-success">
				@TempData["SuccessMessage"]
			</div>
		}

		@if (TempData["ErrorMessage"] != null)
		{
			<div class="alert alert-danger">
				@TempData["ErrorMessage"]
			</div>
		}
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Məhsulların Listi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Məhsullarla bağlı əməliyyatları aşağıdan görə bilərsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Məhsul Adı</th>
									<th scope="col">Məhsul Qiyməti</th>
									<th scope="col">Kateqoriya Adı</th>
									<th scope="col">Məhsul Haqqında</th>
									<th scope="col">Məhsul Şəkli</th>
									<th scope="col">Status</th>
									<th scope="col">Yenilə</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.ProductName</td>
										<td>@item.Price</td>
										<td>@item.CategoryName</td>
										<td>@item.Description</td>
										<td><img src="@item.ImageUrl" width="100" height="65"></td>
										<td>@item.Status</td>
										<td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-success">Yenilə</a></td>
										<td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Product/CreateProduct/" class="btn btn-outline-primary">Yeni Məhsul Əlavə Et</a>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>


